<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&family=Quattrocento:wght@400;700&display=swap" rel="stylesheet">
    <title><%= title %></title>
    

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #fff; border-bottom: 1px solid #ddd;">
        <div class="container-fluid">
            <a class="navbar-brand" href="index.html">
                <img src="<%= logoPath %>" alt="logo" class="d-inline-block align-text-top" style="height: 40px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Center-aligned navbar links -->
                <ul class="navbar-nav mx-auto">
                    <% navLinks.forEach(function(link) { %>
                        <% if (link.text !== "DINING") { %>
                            <li class="nav-item">
                                <a class="nav-link text-uppercase fw-bold" href="<%= link.url %>" style="color: #333; font-family: 'Quattrocento', serif;"><%= link.text %></a>
                            </li>
                        <% } %>
                    <% }); %>
                </ul>
                <!-- Right-aligned buttons -->
                <div class="d-flex">
                    <a href="/booking" class="btn" style="background-color: #caa945; color: #fff; border-radius: 20px; font-family: 'Quattrocento', serif; font-weight: bold; margin-left: 10px;">BOOK NOW</a>
                    <% if (locals.isAuthenticated) { %>
                        <a href="/api/logout" class="btn" style="background-color: #caa945; color: #fff; border-radius: 20px; font-family: 'Quattrocento', serif; font-weight: bold; margin-left: 10px;">LOGOUT</a>
                    <% } else { %>
                        <a href="/login" class="btn" style="background-color: #caa945; color: #fff; border-radius: 20px; font-family: 'Quattrocento', serif; font-weight: bold; margin-left: 10px;">LOGIN</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="video-container" style="width: 100%; height: 100vh; overflow: hidden; margin: 0; padding: 0;">
        <iframe class="responsive-video" src="<%= videoUrl %>" frameborder="0" allow="autoplay; fullscreen" allowfullscreen
            style="width: 100%; height: 100%; object-fit: cover; border: none;"></iframe>
    </div>

    <div class="hospitality-section text-center">
        <h1 class="title"><%= heroTitle %></h1>
        <div class="line"></div>
        <p class="subtitle"><%= heroSubtitle %></p>
    </div>
    
    <br>
    <br>
    <br>

    <div class="container text-center">
        <!-- First Row -->
        <div class="row mb-4">
            <% firstRowImages.forEach(function(image) { %>
                <div class="col">
                    <img src="<%= image.src %>" class="img-fluid rounded" alt="<%= image.alt %>">
                    <h5 class="mt-3" style="font-family: 'Quattrocento', serif; color: #555; line-height: 1.6;">
                        <%= image.description %>
                    </h5>
                </div>
            <% }); %>
        </div>
    
        <br>
        <br><br>
        
        <div class="features-section section">
            <div class="container">
                <h2 class="text-center"><%= featuresTitle %></h2>
                <div class="row">
                    <% features.forEach(function(feature) { %>
                        <div class="col-md-4 feature">
                            <i class="<%= feature.icon %>"></i>
                            <h5><%= feature.title %></h5>
                            <p><%= feature.description %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <br>
        <br><br>
        
        <!-- Second Row -->
        <div class="row">
            <% secondRowImages.forEach(function(image) { %>
                <div class="col">
                    <img src="<%= image.src %>" class="img-fluid rounded" alt="<%= image.alt %>">
                    <h5 class="mt-3" style="font-family: 'Quattrocento', serif; color: #555; line-height: 1.6;">
                        <%= image.description %>
                    </h5>
                </div>
            <% }); %>
        </div>
    </div>

    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <% footerSections.forEach(function(section) { %>
                    <div class="col-md-3">
                        <h5><%= section.title %></h5>
                        <% if (section.type === 'text') { %>
                            <p><%= section.content %></p>
                        <% } else if (section.type === 'links') { %>
                            <ul class="list-unstyled">
                                <% section.links.forEach(function(link) { %>
                                    <li><a href="<%= link.url %>"><%= link.text %></a></li>
                                <% }); %>
                            </ul>
                        <% } else if (section.type === 'contact') { %>
                            <% section.items.forEach(function(item) { %>
                                <p><%= item %></p>
                            <% }); %>
                        <% } else if (section.type === 'social') { %>
                            <% section.icons.forEach(function(icon) { %>
                                <a href="<%= icon.url %>"><i class="bi <%= icon.class %> me-2"></i></a>
                            <% }); %>
                        <% } %>
                    </div>
                <% }); %>
            </div>
            <div class="footer-bottom mt-4">
                <p>&copy; <%= currentYear %> <%= companyName %>. All rights reserved.</p>
                <ul class="list-inline">
                    <% footerLinks.forEach(function(link) { %>
                        <li class="list-inline-item"><a href="<%= link.url %>"><%= link.text %></a></li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </footer>
</body>

</html>
